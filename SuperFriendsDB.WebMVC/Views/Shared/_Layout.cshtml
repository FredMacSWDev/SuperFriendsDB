<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The SuperFriends Database</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light sticky-top" >
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#"><img src="~/Assets/SF Logo/Super_Friends_(1976)_logo.png" alt="The SuperFriends" height="200%" padding="10px, 10px, 10px, 10px"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("The SuperFriends", "Index", "SuperFriends", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    *
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Characters", "Index", "Character")</li>
                        <li>@Html.ActionLink("Powerstats", "Index", "Powerstat")</li>
                        <li>@Html.ActionLink("Biographies", "Index", "Biography")</li>
                        <li>@Html.ActionLink("Appearance", "Index", "Appearance")</li>
                        <li>@Html.ActionLink("Work", "Index", "Work")</li>
                        <li>@Html.ActionLink("Connections", "Index", "Connection")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
                <div class="col-lg-12">
        <hr class="my-4" />
                    <img src="~/Assets/SF Logo/Super_Friends.jpg" padding-left="50%"/>
        </div>
            </div>
        </div>
        <figure>
            <div class="fixed-wrap">
                <div id="Fixed"></div>
            </div>
        </figure>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - The SuperFriends Database</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
